<!-- edit special report -->

<%= form_for :special_report, url: update_special_report_path(@special_report.id), html{ class: 'form-horizontal' } do |f| %>
  <div class="form-group">
    <label class="control-label col-sm-2" for="email">Title:</label>
    <div class="col-sm-10">
    	<%= f.text_field :title, :class => 'form-control', value: @special_report.title %>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2" for="pwd">Final description:</label>
    <div class="col-sm-10"> 
      <%= f.text_field :final_diagnosis, :class => 'form-control', value: @special_report.final_description %>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2" for="pwd">Gross description:</label>
    <div class="col-sm-10"> 
      <%= f.text_field :gross_description, :class => 'form-control', value: @special_report.gross_description %>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2" for="pwd">Block code:</label>
    <div class="col-sm-10"> 
      <select name="special_report[:blockcode]" class="form-control", value="<%= @special_report.blockcode %>" >
      	<% BlockCode.all.each do |blockcode| %>
      		<option value="<%= blockcode.id %>"><%= blockcode.block_description %></option>      	
      	<% end %>
      </select>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2" for="pwd">Micropscopic description:</label>
    <div class="col-sm-10"> 
      <%= f.text_field :microscopic_description, :class => 'form-control', value: @special_report.microscopic_description %>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2" for="pwd">Assign to:</label>
    <div class="col-sm-10"> 
      <select name="special_report[:assign]" class="form-control", value="<%= @special_report.assign %>" >
      	<% User.all.each do |user| %>
      		<option value="<%= user.id %>"><%= user.eamil %></option>      	
      	<% end %>
      </select>
    </div>
  </div>
  
  <div class="form-group"> 
    <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
      <button type="submit" class="btn btn-default">Save and Exit</button>
    </div>
    <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
      <a href="#" class="btn btn-default signout-report">Sign out</a>
    </div>
    <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
      <a href="<%= delete_special_report_path(@description.id, @special_report.id) %>" class="btn btn-default">Delete</a>
    </div>
  </div>  
<% end %>